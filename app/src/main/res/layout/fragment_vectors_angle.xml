<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vectors.vectors_vektorovy_soucin">

    <!-- První vektor -->
    <EditText
        android:id="@+id/vector1X"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:hint="X"
        android:inputType="numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/vector1Y"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:hint="Y"
        android:inputType="numberSigned"
        app:layout_constraintStart_toEndOf="@+id/vector1X"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/vector1Z"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:hint="Z"
        android:inputType="numberSigned"
        app:layout_constraintStart_toEndOf="@+id/vector1Y"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText" />


    <!-- druhý vektor -->

    <EditText
        android:id="@+id/vector2X"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="240dp"
        android:gravity="center_horizontal"
        android:hint="X"
        android:inputType="numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/vector2Y"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="240dp"
        android:gravity="center_horizontal"
        android:hint="Y"
        android:inputType="numberSigned"
        app:layout_constraintStart_toEndOf="@+id/vector2X"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/vector2Z"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="240dp"
        android:gravity="center_horizontal"
        android:hint="Z"
        android:inputType="numberSigned"
        app:layout_constraintStart_toEndOf="@+id/vector2Y"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText" />

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vector2Y"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/result_deg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculate_button"
        tools:text=" 451 °" />

    <TextView
        android:id="@+id/result_rad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_deg"
        tools:text=" pi rad" />
</androidx.constraintlayout.widget.ConstraintLayout>